{
  "openapi": "3.0.3",
  "info": {
    "title": "Reportheld Read-Only API",
    "version": "1.0.0",
    "description": "Read-only REST API for Sites, Plants and Closed Protocols. Secured using JWT Bearer authentication."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1",
      "description": "Local Development Server"
    }
  ],
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "paths": {
    "/sites": {
      "get": {
        "summary": "Get list of sites",
        "tags": ["Sites"],
        "responses": {
          "200": {
            "description": "List of sites",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Site" }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/plants": {
      "get": {
        "summary": "Get list of plants",
        "tags": ["Plants"],
        "responses": {
          "200": {
            "description": "List of plants",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Plant" }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/protocols/closed": {
      "get": {
        "summary": "Get list of closed protocols",
        "tags": ["Closed Protocols"],
        "responses": {
          "200": {
            "description": "List of closed protocols",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/ClosedProtocol" }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/protocols/closed/{id}": {
      "get": {
        "summary": "Get closed protocol metadata",
        "tags": ["Closed Protocols"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Closed protocol metadata",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ClosedProtocol" }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Protocol not found" },
          "500": { "description": "Internal server error" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Site": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "string", "description": "Unique site identifier" },
          "name": { "type": "string" },
          "abbreviationName": { "type": "string" },
          "zip": { "type": "string" },
          "address": { "type": "string" },
          "city": { "type": "string" },
          "country": { "type": "string" }
        }
      },
      "Plant": {
        "type": "object",
        "required": ["id", "name", "siteId"],
        "properties": {
          "id": { "type": "string", "description": "Unique plant identifier" },
          "siteId": {
            "type": "string",
            "description": "Parent site identifier"
          },
          "name": { "type": "string" },
          "code": { "type": "string" },
          "level1": { "type": "string" },
          "zip": { "type": "string" },
          "address": { "type": "string" },
          "city": { "type": "string" },
          "country": { "type": "string" }
        }
      },
      "ClosedProtocol": {
        "type": "object",
        "required": ["id", "name", "date", "status", "siteId", "plantId"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique protocol identifier"
          },
          "siteId": {
            "type": "string",
            "description": "Parent site identifier"
          },
          "plantId": {
            "type": "string",
            "description": "Parent plant identifier"
          },
          "level1": { "type": "string" },
          "name": { "type": "string" },
          "basedOn": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "owner": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["closed"]
          }
        }
      }
    }
  }
}
